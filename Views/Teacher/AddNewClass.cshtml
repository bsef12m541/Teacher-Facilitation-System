@{
    ViewBag.Title = "AddNewClass";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

@model EADWebTeacherFacilitationSystem.Models.Class
<div class="container">
    <div class="col-lg-5"></div>
    <h3 class="col-lg-6">Add New Class</h3>
</div>
<body>
    <div>
        @using (Html.BeginForm("AddClass", "Teacher", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.ClassName, new { @class = "control-label col-lg-4" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.ClassName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.TeacherID, new { @class = "control-label col-lg-4" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.TeacherID, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-offset-4 col-lg-10">
                    <input type="submit" value="Add Class" class="btn btn-default" />
                </div>
            </div>

        }
    </div>
</body>