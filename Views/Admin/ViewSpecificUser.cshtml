@{
    ViewBag.Title = "ViewSpecificUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model EADWebTeacherFacilitationSystem.Models.User

<body>

    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">User Detail</h3>
    </div>

    <div>
        <form action="/Admin/Index" class="form-horizontal" role="form">

            <div class="form-group">
                @Html.LabelFor(u => u.Name, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Password, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
                </div>
            </div>

            
            <div class="form-group">
                @Html.LabelFor(u => u.Designation, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.Designation, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.EmailID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.EmailID, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.PhoneNo, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.PhoneNo, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Address, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.Address, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Back" class="btn btn-default" />
                </div>
            </div>

        </form>
    </div>


</body>
