@{
    ViewBag.Title = "ViewAllAnnouncement";
    Layout = "~/Views/Shared/StudentLayout2.cshtml";
}

@using EADWebTeacherFacilitationSystem.Models
<body>

    <div class="container">

            @foreach (Announcement a in Model)
            {
            <div class="col-lg-9">
               <div class="form-group col-lg-2">
                    @Html.LabelFor(u => a.AnnouncementID, new { @class = "control-label col-lg-3" })
                </div>
                <div class="col-lg-2">
                        @Html.TextBoxFor(u => a.AnnouncementID, new { @class = "form-control", @readonly = "readonly" })
                 </div>
                
                <div class="form-group col-lg-1">
                    @Html.Label("Date", new { @class = "control-label col-lg-3" })
                 </div>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(u => a.date, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                
                <div class="form-group col-lg-9" >
                    <div class="col-lg-2">
                        @Html.LabelFor(u => a.Announcemnet, new { @class = "control-label col-lg-3" })
                    </div>
                    <div class="col-lg-7">
                        @Html.TextAreaFor(u => a.Announcemnet, new { @class = "form-control", @readonly = "readonly" })
                        <br /><br />
                        <br /><br />
                    </div>
                </div>
            }

    </div>

</body>