<body>
    

    <div>
        <div class="container">
            <div class="list-group">
                <form action="/Teacher/AddStudent">
                    <input type="submit" value=" Add A Student " class=" btn-primary col-lg-4" />
                </form>

                <form action="/Admin/Block">
                    <input type="submit" value=" Block A Student " class=" btn-success col-lg-4" />
                </form>

                <form action="/Admin/ViewAStudent">
                    <input type="submit" value=" View Specific User " class=" btn-primary col-lg-4" />
                </form>

                <form action="/Teacher/ViewAllStudent">
                    <input type="submit" value=" View All Student Detail " class=" btn-primary col-lg-4" />
                </form>

                <form action="/Teacher/ViewAllAnnouncement">
                    <input type="submit" value=" View All Announcement " class=" btn-success col-lg-4" />
