@using EADWebTeacherFacilitationSystem.Models

@{
    ViewBag.Title = "ViewResult";
    Layout = "~/Views/Shared/StudentLayout2.cshtml";
}


<div class="container">
    <div class="col-lg-3"></div>
    <h3 class="col-lg-6">Result</h3>
    <br /> <br />
    <br /> <br />
    <br /> <br />

</div>

<body>

    @{

        foreach (QuizStudent qz in Model)
        {
            TFSDataBaseEntities tf = new TFSDataBaseEntities();
            int totalQuestion =  tf.Quizs.Where(x => x.quizID == qz.QuizID).Count();

            <div class="col-lg-12">
                <div class="form-group col-lg-1">
                    @Html.LabelFor(u => qz.QuizID, new { @class = "control-label col-lg-3" })
                </div>
                <div class="col-lg-1">
                    @Html.TextBoxFor(u => qz.QuizID, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="col-lg-1"></div>
                    <div class="form-group col-lg-2">
                        @Html.Label("Total Qusestion", new { @class = "control-label col-lg-3" })
                    </div>
                    <div class="col-lg-1">
                        @Html.TextBoxFor(u => totalQuestion, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                <div class="col-lg-1"></div>
                    <div class="form-group col-lg-2">
                        @Html.Label("Total Correct Answers", new { @class = "control-label col-lg-3" })
                    </div>
                    <div class="col-lg-1">
                        @Html.TextBoxFor(u => qz.StudentMarks, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <br /> <br />
                    <br /> <br />
                </div>

        }
    }
</body>