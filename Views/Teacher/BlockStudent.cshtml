@{
    ViewBag.Title = "BlockStudent";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

@using EADWebTeacherFacilitationSystem.Models
<div class="container">
    <div class="col-lg-5"></div>
    <h3 class="col-lg-6">Select A Class</h3>
</div>
<body>
    <div>

        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">

            </div>
        </div>
        <br /><br />
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Select Class</h3>
                        </div>
                        <div class="panel-body">
                            <form id="Announce" role="form" action="BlockStudent2" method="get" enctype="multipart/form-data">
                                <fieldset>
                                    <select class="form-control" name="cName" form="Announce">
                                        @foreach (Class s in Model)
                                        {
                                            <option>@s.ClassName</option>
                                        }
                                    </select>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <button type="submit" class="btn btn-lg btn-success btn-block">Next</button>
                                </fieldset>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br /><br />

    </div>
</body>