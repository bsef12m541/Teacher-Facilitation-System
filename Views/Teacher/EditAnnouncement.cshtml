@model EADWebTeacherFacilitationSystem.Models.Announcement

@{
    ViewBag.Title = "EditAnnouncement";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

<body>
        <div class="container">
            <div class="col-lg-5"></div>
            <h3 class="col-lg-6">Edit Announcement</h3>
        </div>

        <div>
            @using (Html.BeginForm("SaveEditAnnouncement", "Teacher", FormMethod.Post, new { @class="form-horizontal", role="form"}))
            {
                @Html.HiddenFor(u => u.AnnouncementID)
                @Html.HiddenFor(u => u.teacherID)
                @Html.HiddenFor(u => u.date)

                
                <div class="form-group">
                @Html.LabelFor(q => q.ClassID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.ClassID, new { @class = "form-control" })
                </div>
            </div>
                
                <div class="form-group">
                @Html.LabelFor(q => q.Announcemnet, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.Announcemnet, new { @class = "form-control" })
                </div>
            </div>
                
                <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Save" />
                </div>
            </div>
                
            }
        </div>
</body>
