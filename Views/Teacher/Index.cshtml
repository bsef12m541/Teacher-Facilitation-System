                </form>

                <form action="/Teacher/PostAnnouncement">
                    <input type="submit" value=" Add New Announcement " class=" btn-primary col-lg-4" />
                </form>

                <form action="/Teacher/AddNewClass">
                    <input type="submit" value=" Add New Class " class=" btn-primary col-lg-4" />
                </form>

                <form action="/Teacher/AddStudentToClass">
                    <input type="submit" value=" Add Students in Class " class=" btn-success col-lg-4" />
                </form>

                <form action="/Teacher/AddAssignment">
                    <input type="submit" value="Add Assignment" class=" btn-primary col-lg-4" />
                </form>

            </div>
