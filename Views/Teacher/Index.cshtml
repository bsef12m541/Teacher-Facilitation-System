@{
    ViewBag.Title = "TeacherIndex";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

<head>
    <title></title>
    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/script/bootstrap.js"></script>
    <link href="~/content/carousel.css" rel="stylesheet">
    
</head>

