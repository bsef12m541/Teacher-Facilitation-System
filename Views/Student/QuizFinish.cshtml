@{
    ViewBag.Title = "QuizFinish";
    Layout = "~/Views/Shared/StudentLayout2.cshtml";
}

@model EADWebTeacherFacilitationSystem.QuizResultClass

<body>
    <div class="container">
        <div class="col-lg-3"></div>
        <h3 class="col-lg-6">Quiz Result</h3>
    </div>

    <div>
        <form class="form-horizontal" role="form">


            <div class="form-group">
                @Html.Label("Quiz ID", new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.QuizCode, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Toatl Question", new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.TotalQuestion, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>


            <div class="form-group">
                @Html.Label("Total Correct Ans", new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.TotalCorrectOptions, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Total Question Skipped", new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.TotalSkippedQuestion, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Percentage Correctness", new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(u => u.percentage, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div> 
            </form>
        
    </div>



</body>